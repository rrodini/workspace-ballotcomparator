<?xml version="1.0" encoding="UTF-8"?>
<Configuration name="BallotComparator">
  <Appenders>
    <File name="BallotComparator" fileName="./logs/ballotcomparator.log">
      <PatternLayout pattern="%-5level %c{1}:%M:%L - %msg%n"/>
	  <Append>false</Append>		
    </File>
  </Appenders>
  <Loggers>
    <Root level="INFO">
      <AppenderRef ref="BallotComparator"/>
    </Root>
    <Logger name="com.rodini.ballotcomparator"></Logger>
    <Logger name="com.rodini.ballotcomparator.view"></Logger> 
    <Logger name="com.rodini.ballotcomparator.model"></Logger>
  </Loggers>
</Configuration>